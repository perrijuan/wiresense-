<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.tensorflowlite.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_role"
            app:destination="@id/roleSelectionFragment" />
    </fragment>

    <fragment
        android:id="@+id/roleSelectionFragment"
        android:name="com.example.tensorflowlite.RoleSelectionFragment"
        android:label="Selecione seu Perfil"
        tools:layout="@layout/fragment_role_selection">

        <action
            android:id="@+id/action_role_to_segmentation"
            app:destination="@id/segmentationFragment" />

        <action
            android:id="@+id/action_role_to_analytics"
            app:destination="@id/analyticsFragment" />

        <action
            android:id="@+id/action_role_to_chatbot"
            app:destination="@id/chatbotFragment" />
    </fragment>

    <fragment
        android:id="@+id/segmentationFragment"
        android:name="com.example.tensorflowlite.SegmentationFragment"
        android:label="Segmentação de Fios"
        tools:layout="@layout/fragment_segmentation" />

    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.example.tensorflowlite.AnalyticsFragment"
        android:label="Analytics"
        tools:layout="@layout/fragment_analytics" />

    <fragment
        android:id="@+id/chatbotFragment"
        android:name="com.example.tensorflowlite.ChatbotFragment"
        android:label="Chatbot IA"
        tools:layout="@layout/fragment_chatbot" />

</navigation>